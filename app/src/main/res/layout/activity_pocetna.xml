<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        tools:context=".Pocetna"
        android:orientation="vertical"
        android:background="#0099cc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mk"
            android:textSize="25sp"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/novaIgra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nova_igra"
            android:background="#2600c1"
            android:width="300dp"
            android:height="50dp"
            android:textSize="20sp"
            android:layout_margin="25dp"/>
        <Button
            android:id="@+id/uputstvo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uputstvo"
            android:background="#2600c1"
            android:width="300dp"
            android:height="50dp"
            android:textSize="20sp"
            android:layout_margin="25dp"
            />
        <Button
            android:id="@+id/oAplikaciji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/o_app"
            android:background="#2600c1"
            android:width="300dp"
            android:height="50dp"
            android:textSize="20sp"
            android:layout_margin="25dp"/>
    </LinearLayout>
